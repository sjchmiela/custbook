<div class="page-header"><h1><%= t "treatment.list" %></h1></div>
<div class="row">
<div class="span6">
<%= treatment_create_button %>
</div>
<div class="span4 pull-right">
<input type="text" class="filter" name="livefilter" placeholder="<%= t "search" %>" />
</div>
</div>
<br />
<script>
$(function() {
    $("table#sort").tablesorter({headers:{5:{sorter:false}}});
    $('table.live_filter').liveFilter('fade');
});
</script>
<table class="table table-bordered zebra-striped live_filter" id="sort">
<thead>
  <tr>
    <th class="header headerSortDown">#</th>
    <th class="green"><%= t "client.one" %></th>
    <th class="blue"><%= t "treatment.ttype.text" %></th>
    <th class="red"><%= t "treatment.color.text" %></th>
    <th class="orange"><%= t "treatment.date" %></th>
    <th><%= t "actions" %></th>
  </tr>
</thead>
<tbody>
<% if treatments.any? %>
<% treatments.each do |treatment| %>
 <tr>
    <td><%= treatment.id %></td>
    <td><%= link_to treatment.client.full_name, treatment.client %></td>
    <td><%= treatment.ttype %><%= treatment_labels(treatment) %></td>
    <td><%= treatment.color %></td>
    <td><%= treatment.date %></td>
    <td><div class="btn-group"><%= treatment_show_button treatment %>
    <%= treatment_edit_button treatment %>
    <%= treatment_destroy_button treatment %></div></td>
  </tr>
<% end %>
<% else %>
<tr><td colspan="6"><%= t "no_objects_to_display" %></td></tr>
<% end %>
</tbody>
</table>
