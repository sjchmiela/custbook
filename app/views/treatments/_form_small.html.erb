<%= form_for(treatment, :html => {:class => "form-vertical small-treatment-form"}) do |f| %>
  <%= f.hidden_field :client_id %>
  <div class="control-group">
    <%= f.label :ttype, "Rodzaj zabiegu", :class => "control-label" %><div class="controls">
      <select name="ttype_from_selection" id="ttype_from_selection">
        <option value=""></option>
        <option value="new">Dodaj nowy</option>
      <%= options_from_collection_for_select(Treatment.where("ttype != ''").select("DISTINCT(ttype)").order(:ttype),"ttype","ttype") %>
    </select>
    <%= f.text_field :ttype, :id => "new_ttype" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, "Cena", :class => "control-label" %><div class="controls"><div class="input-append">
    <%= f.number_field :price %><span class="add-on">z≈Ç</span></div></div>
  </div>
  <div class="control-group">
    <%= f.label :color, "Kolor", :class => "control-label" %><div class="controls">
    <select name="color_from_selection" id="color_from_selection">
        <option value=""></option>
        <option value="new">Dodaj nowy</option>
      <%= options_from_collection_for_select(Treatment.where("color != ''").select("DISTINCT(color)").order(:color),"color","color") %>
    </select>
    <%= f.text_field :color, :id => "new_color" %></div>
  </div>
  <div class="control-group">
    <%= f.label :date, "Data", :class => "control-label" %><div class="controls">
    <%= f.date_select :date, :order => [:day, :month, :year] %></div>
  </div>
  <div class="control-group">
    <%= f.label :correction, "Korekta", :class => "control-label" %><div class="controls">
    <%= f.check_box :correction %></div>
  </div>
  <div class="control-group">
    <%= f.label :additional_info, "Uwagi", :class => "control-label" %><div class="controls"><%= f.text_area :additional_info %></div>
  </div>
  <div class="form-actions">
    <%= f.submit "Zapisz zabieg", :class => [:btn, "btn-primary"] %>
    <%= link_to "Anuluj", treatments_path, :class => [:btn] %>
  </div>
<% end %>
<script>
  $(function(){$("#new_ttype").hide();$("#ttype_from_selection").live("click", function(){if($("#ttype_from_selection option:selected").text() == "Dodaj nowy") {$("#new_ttype").show();} else { $("#new_ttype").hide();}})})
  $(function(){$("#new_color").hide();$("#color_from_selection").live("click", function(){if($("#color_from_selection option:selected").text() == "Dodaj nowy") {$("#new_color").show();} else { $("#new_color").hide();}})})
</script>