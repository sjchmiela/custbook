<div class="page-header"><h1>Lista klientek</h1></div>
<div class="row">
<div class="span14">
<%= client_create_button %>
<%= link_to 'Wyszukiwanie', search_client_path, :class => [:btn, "btn-info"]%>
</div>
</div>
<br />
<script>
  $(function() {
$("table#sort").tablesorter({headers:{5:{sorter:false},3:{sorter:false},4:{sorter:false}}});
});
</script>
<table class="table table-bordered zebra-striped" id="sort">
<thead>
  <tr>
    <th class="header headerSortDown">#</th>
    <th class="green">Nazwisko</th>
    <th class="blue">Imię</th>
    <th class="red">Tel. kom.</th>
    <th class="orange">Email</th>
    <th>Akcje</th>
  </tr>
</thead>
<tbody>
<% if @clients.any? %>
<% @clients.each do |client| %>
  <tr>
    <td><%= client.id %></td>
    <td><%= client.surname %></td>
    <td><%= client.name %></td>
    <td><%= client.cell %></td>
    <td><%= mail_to client.email %></td>
    <td><div class="btn-group"><%= client_show_button client %>
    <%= client_edit_button client %>
    <%= client_destroy_button client %></div></td>
  </tr>
<% end %>
<% else %>
<tr><td colspan="6">Brak obiektów do wyświetlenia.</td></tr>
<% end %>
</tbody>
</table>
<div class="row">
 
<% if @page > 1 %>
<div class="span3"> 
<%= link_to 'Poprzednia strona', {:controller => :clients, :action => :page, :page => @page-1}, :class=>[:btn,:primary] %>
</div>
<% end %>

<% if @page > 1 %>
<div class="span8" style="text-align: center">
<% else %>
<% if Client.count > (@page)*10 %>
<div class="span11" style="text-align: center">
<% else %>
<div class="span10" style="text-align: center">
<% end %>
<% end %>
<% for i in 0..(Client.count/10) do %>
<%= link_to i+1, {:controller => :clients, :action => :page, :id => i+1} %>
<% end %>
</div>
<% if Client.count > (@page)*10 %>
<div class="span3 pull-right" style="text-align: right">
<%= link_to 'Następna strona', {:controller => :clients, :action => :page, :id => @page+1}, :class=>[:btn,:primary] %>
</div>
<% end %>


</div>